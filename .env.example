# =============================================================================
# .env.example (Template for environment variables)
# =============================================================================
# Copy this file to .env and update the values for your local setup
# Never commit your actual .env file to version control!

# Project Configuration
PROJECT_NAME=ai-fitness-planner
VERSION=0.0.1
ENVIRONMENT=development

# Database Configuration
DB_USER=your_db_username
DB_PASSWORD=your_secure_db_password
DB_NAME=ai_fitness_planner
DB_HOST=ai_fitness_planner_db
DB_PORT=5432

# Database URL (update with your credentials)
DATABASE_URL=postgresql://your_db_username:your_secure_db_password@ai_fitness_planner_db:5432/ai_fitness_planner

# External APIs
OPENAI_API_KEY=sk-your_openai_api_key_here

# MongoDB Configuration
MONGO_USER=your_mongo_username
MONGO_PASSWORD=your_mongo_password
MONGO_DB_NAME=usda_nutrition

# Mongo Express Configuration  
MONGO_EXPRESS_USER=admin
MONGO_EXPRESS_PASSWORD=your_mongo_express_password

# External API Base URL, for local: API_BASE_URL="http://fast_api_ai_fitness_planner:8000"
API_BASE_URL=http://your-api-server-url:port

# LangSmith API Key (optional)
LANGSMITH_API_KEY=lsv2_your_langsmith_api_key_here